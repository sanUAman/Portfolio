<section id="about" class="about-section">
    <div class="about-container">
        <div class="header-with-line">
            <h2><img src="/images/human.png" alt="human" class="icon">About Me</h2>
            <div class="line"></div>
        </div>
        <div class="first-grid">
            <p class="about-text">
                I'm a full-stack developer with a passion for building beautiful, functional, and user-friendly applications.
                With expertise in both frontend and backend technologies, I create seamless experiences that solve real-world problems.
            </p>
            <p class="role">
                <img src="/images/bag.png" alt="bag" class="icon">
                Full Stack Developer
            </p>
        </div>
    </div>
    <div class="skills-section">
        <h3><img src="/images/book.png" alt="book" class="icon">Skills & Technologies</h3>
        <div class="skills-grid">
            <div class="skills-column">
                <h4>Frontend</h4>
                <ul>
                    <li>React</li>
                    <li>TypeScript</li>
                    <li>Tailwind CSS</li>
                </ul>
            </div>
            <div class="skills-column">
                <h4>Backend</h4>
                <ul>
                    <li>ASP.NET</li>
                    <li>C#</li>
                    <li>SQL Server</li>
                </ul>
            </div>
            <div class="skills-column">
                <h4>Tools</h4>
                <ul>
                    <li>Git</li>
                    <li>Docker</li>
                    <li>Azure</li>
                </ul>
            </div>
        </div>
    </div>
</section>

